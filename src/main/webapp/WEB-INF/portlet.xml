<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>Liferay Vaadin plugin portlet</portlet-name>
		<display-name>Liferay Vaadin plugin</display-name>

		<portlet-class>com.arcusys.liferay.vaadinplugin.ControlPanelPortlet</portlet-class>

		<init-param>
			<name>widgetset</name>
			<value>com.arcusys.liferay.vaadinplugin.widgetset.ControlPanelWidgetSet</value>
		</init-param>
		<init-param>
			<name>UI</name>
			<value>com.arcusys.liferay.vaadinplugin.ControlPanelUI</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>

		<portlet-info>
			<title>Liferay Vaadin plugin</title>
			<short-title>Liferay Vaadin plugin</short-title>
		</portlet-info>

		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>